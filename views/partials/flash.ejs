<style>
    .custom-alert {
        position: fixed;
        top: 15%;
        left: 85%;
        transform: translate(-50%, -50%);
        display: flex;
        justify-content: center;
        align-items: center;
        vertical-align: middle;
        width: 100%;
        max-width: 350px;
        padding: 15px;
        border-radius: 8px;
        font-size: 16px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        z-index: 999;
        animation: borderAnimation 4s linear infinite;
        /* Add an animation to the alert */
        opacity: 1;
        transition: opacity 0.5s;
    }

    .custom-alert.success {
        background-color: #4CAF50;
        color: #fff;
    }

    .custom-alert.error {
        background-color: #ec1f1f;
        color: #fff;
    }

    .custom-alert .close-button {
        position: absolute;
        left: 14px;
        cursor: pointer;
    }

</style>

<% if (success && success.length) { %>
    <div class="custom-alert success">
        <svg style="margin-right: 10px;" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor"
            stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-check-circle-2">
            <circle cx="12" cy="12" r="10" />
            <path d="m9 12 2 2 4-4" />
        </svg>
        <%= success %>
    </div>
    <script>
        // Automatically close the success message after 4 seconds
        setTimeout(function () {
            var successAlert = document.querySelector('.custom-alert.success');
            if (successAlert) {
                successAlert.style.opacity = 0;
                setTimeout(function () {
                    successAlert.remove();
                }, 500);
            }
        }, 4000);
    </script>
    <% } %>

        <% if (error && error.length) { %>
            <div class="custom-alert error">
                <svg style="margin-right: 10px;" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                    stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-ban">
                    <circle cx="12" cy="12" r="10" />
                    <path d="m4.9 4.9 14.2 14.2" />
                </svg>
                <%= error %>
            </div>
            <script>
                // Automatically close the error message after 4 seconds
                setTimeout(function () {
                    var errorAlert = document.querySelector('.custom-alert.error');
                    if (errorAlert) {
                        errorAlert.style.opacity = 0;
                        setTimeout(function () {
                            errorAlert.remove();
                        }, 500);
                    }
                }, 3000);
            </script>
            <% } %>