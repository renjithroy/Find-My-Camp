<% layout('layouts/boilerplate') %>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap');

        .result-message {
            font-family: 'Poppins', sans-serif;
            font-weight: 400;
            color: #000;
            margin-top: 1rem;
            font-size: 1.2rem;
        }

        .italics {
            font-weight: 300;
        }

    </style>
    <link rel="stylesheet" href="/stylesheets/index.css">

    <div class="container mb-5">

        <% if(noResults) { %>
            <p class="result-message max-height">No campgrounds found near <span class="italics">
                    <%= place_name %>.
                </span>
                Try a different location.
            </p>
            <div style="text-align: center;">
                <img src="/assets/img/sadmanface.svg" alt="sad-face">
            </div>
            <% } else { %>

                <div style="display: flex; flex-direction: column; justify-content: center; align-items: center;">
                    <div id="cluster-map" class="mb-4" style="width: 90%; height: 400px;"></div>
                </div>

                <% if (totalResults===1) { %>
                    <p class="result-message">Found 1 campground near <span class="italics">
                            <%= place_name %>
                        </span>
                    </p>
                    <% } else { %>
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <p class="result-message">Explore <%= totalResults %> campgrounds near <span class="italics">
                                        <%= place_name %>
                                    </span>
                            </p>
                            <button id="toggleMapButton" onclick="toggleMap()" style="display: flex; align-items: center;">
                                <svg style="padding-right: 3px;" stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 512 512" height="1em" width="1em"
                                    xmlns="http://www.w3.org/2000/svg">
                                    <path
                                        d="M48 48a48 48 0 1 0 48 48 48 48 0 0 0-48-48zm0 160a48 48 0 1 0 48 48 48 48 0 0 0-48-48zm0 160a48 48 0 1 0 48 48 48 48 0 0 0-48-48zm448 16H176a16 16 0 0 0-16 16v32a16 16 0 0 0 16 16h320a16 16 0 0 0 16-16v-32a16 16 0 0 0-16-16zm0-320H176a16 16 0 0 0-16 16v32a16 16 0 0 0 16 16h320a16 16 0 0 0 16-16V80a16 16 0 0 0-16-16zm0 160H176a16 16 0 0 0-16 16v32a16 16 0 0 0 16 16h320a16 16 0 0 0 16-16v-32a16 16 0 0 0-16-16z">
                                    </path>
                                </svg>
                                Show/Hide Map
                            </button>
                        </div>
                        <% } %>

                            <div class="row">
                                <% for(let campground of campgrounds) {%>
                                    <div class="col-12 col-md-6 col-lg-4">
                                        <div class="outer">
                                            <% if(campground.images.length){ %>
                                                <img src="<%= campground.images[0].url %>" alt=""
                                                    class="img-fluid camp-img"
                                                    style="width: 400px; height: 200px; object-fit: cover;">
                                                <% }else{ %>
                                                    <img src="https://res.cloudinary.com/djkeah1gc/image/upload/v1679241947/Campscape/tent1_uab2hw.jpg"
                                                        class="img-fluid camp-img">
                                                    <% } %>
                                                        <div
                                                            class="d-flex align-items-center justify-content-between my-1">
                                                            <h6 class="camp-title">
                                                                <%= campground.title %>
                                                            </h6>
                                                            <% if (campground.averageRating> 0) { %>
                                                                <span
                                                                    style="font-size: 1rem; color: black; display: flex; align-items: center;">
                                                                    <!-- Generate stars based on averageRating -->
                                                                    <% for (let i=0; i <
                                                                        Math.floor(campground.averageRating); i++) { %>
                                                                        <svg xmlns="http://www.w3.org/2000/svg"
                                                                            height="1em" viewBox="0 0 576 512"
                                                                            style="fill: gold;">
                                                                            <path
                                                                                d="M316.9 18C311.6 7 300.4 0 288.1 0s-23.4 7-28.8 18L195 150.3 51.4 171.5c-12 1.8-22 10.2-25.7 21.7s-.7 24.2 7.9 32.7L137.8 329 113.2 474.7c-2 12 3 24.2 12.9 31.3s23 8 33.8 2.3l128.3-68.5 128.3 68.5c10.8 5.7 23.9 4.9 33.8-2.3s14.9-19.3 12.9-31.3L438.5 329 542.7 225.9c8.6-8.5 11.7-21.2 7.9-32.7s-13.7-19.9-25.7-21.7L381.2 150.3 316.9 18z" />
                                                                        </svg>
                                                                        <% } %>
                                                                </span>
                                                                <% } %>
                                                        </div>

                                                        <p class="camp-desc">
                                                            <%= campground.description.slice(0,75)+".." %>
                                                        </p>
                                                        <a href="/campgrounds/<%= campground._id %>"
                                                            class="btn camp-btn">View
                                                            Campground</a>
                                        </div>
                                    </div>
                                    <% } %>
                            </div>

                            <script>
                                const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
                                const campgrounds = {features:<%-JSON.stringify(campgrounds)%>} //stringify to make send data valid (by default id is not a string, so error)
                                var coordinates = <%-JSON.stringify(searchCoordinates)%> // Pass the coordinates to the script
                            </script>
                            
                            <script src="/javascripts/clusterMap.js"></script>

            <% } %>
    </div>
